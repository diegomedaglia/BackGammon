<UserControl
    x:Class="BackGammon.BGPoint"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="100" Padding="0,0,0,0" 
    
    x:Name="BGPointcontrol"
    >
    <Canvas>
        <Polygon Points="0,0,50,300,100,0" Fill="{Binding TriangleFill, ElementName=BGPointcontrol}" Stroke="Black" />
        <Rectangle Canvas.ZIndex="1" Width="100" Height="400" Fill="Transparent" />
    </Canvas>
</UserControl>
